    <class>com.ifpb.padroes.entidades.Sala</class>
    <class>com.ifpb.padroes.entidades.Material</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
